<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.tristan3fish.revision.Question" table="Question">
		<id name="QuestionId" type="int" column="QuestionId">
			<generator class="assigned"/>
		</id>
		<property name="question" column="Question" type="string"/>
		<property name="correctAnswer" column="CorrectAnswer" type="string"/>

	
	    <set name="attemptedAnswers" table="Answer">
            <key column="QuestionId"/>
           	<composite-element class="com.tristan3fish.revision.Answer">
           		<property name="AnswerId" type="int" column="AnswerId"/>
				<property name="timeCreated" column="TimeCreated" type="date"/>
				<property name="answer" column="Answer" type="int"/>
				<property name="correct" column="Correct" type="boolean"/>
				<property name="hesitation_ms" column="Hesitation_ms" type="long"/>
           	</composite-element>
            <!-- <one-to-many class="com.tristan3fish.revision.Answer"/> -->
        </set>
		
        <list name="posibleAnswers" table="PosibleAnswer" >
			<key column="QuestionId"></key>
			<index column="PosibleAnswerId"></index>
			<element column="PosibleAnswer" type="string">
			</element>
		</list>
        
        
	</class>
</hibernate-mapping>